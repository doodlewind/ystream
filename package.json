{
  "name": "ydb",
  "version": "0.0.1",
  "description": "The fast CRDT database",
  "sideEffects": false,
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "funding": {
    "type": "GitHub Sponsors ❤",
    "url": "https://github.com/sponsors/dmonad"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./utils/websocket": {
      "node": "./src/utils/websocket.node.js",
      "types": "./dist/src/utils/websocket.browser.js",
      "default": "./src/utils/websocket.browser.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf dist .ydb-websocket-server .test_dbs",
    "types": "tsc",
    "gentesthtml": "npx 0gentesthtml --script ./tests/index.js > test.html",
    "debug:browser": "npm run gentesthtml && npx 0serve -o test.html",
    "debug:node": "LOG=* node --inspect-brk tests/index.js",
    "ws-server": "LOG=* node ./src/comms/websocket-server.js",
    "ws-server:inspect": "LOG=* node --inspect-brk ./src/comms/websocket-server.js",
    "test": "c8 --100 node tests/index.js",
    "test-coverage": "npm run lint && npm run dist && nyc --check-coverage --lines 100 --branches 100 --functions 100 --statements 100 node --unhandled-rejections=strict ./dist/test.cjs --repetition-time 50 --production",
    "test-inspect": "node --inspect-brk --unhandled-rejections=strict ./test.js --repetition-time 50 --production",
    "test-extensive": "node test.js && npm test -- --repetition-time 30000 --extensive",
    "test-code-coverage": "npm run dist && nyc --reporter html node ./dist/test.cjs --production",
    "lint": "standard && tsc",
    "preversion": "npm run clean && npm run test && npm run types && npm run dist",
    "postpublish": "npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjs/ydb.git"
  },
  "author": "Kevin Jahns <kevin.jahns@protonmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yjs/ydb/issues"
  },
  "homepage": "https://github.com/yjs/ydb#readme",
  "standard": {
    "ignore": [
      "/dist",
      "/node_modules",
      "/docs"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/ws": "^8.5.5",
    "c8": "^7.13.0",
    "concurrently": "^7.5.0",
    "standard": "^17.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "isodb": "^0.1.6",
    "lib0": "^0.2.82",
    "yjs": "^13.5.43"
  },
  "optionalDependencies": {
    "ws": "^8.14.1",
    "uws": "github:uNetworking/uWebSockets.js#v20.31.0"
  }
}
